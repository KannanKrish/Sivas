@model IEnumerable<Sivas.Models.Products>

@{
    ViewBag.Title = "Home Page";
}

@section styles{
    <link href="~/Content/customProduct.css" rel="stylesheet" />
}

<script type="text/javascript">
    function GoToRoom(category) {
        window.location = '@Html.Raw(@Url.Action("Category", "Products"))' + '?category=' + category;
    }
</script>

<div class="ProductContainer">
    @foreach (var item in Model)
    {
        <div class="product" @("onclick=GoToRoom('" + item.Category + "')")>
            <div class="Overlap"><span class="Text">See More</span></div>
            <div class="product_Image">
                <img src="@String.Format("data:image/gif;base64,{0}", Convert.ToBase64String(item.Image))" class="product_Image" />
            </div>
            <div class="product_Title">@item.Category </div>
            <div class="PriceHolder"><span class="Text">@item.Price</span></div>
        </div>
    }
</div>