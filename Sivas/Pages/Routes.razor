<Router AppAssembly="@typeof(App).Assembly"
        AdditionalAssemblies="new []{typeof(BrushtailTech.SiteManager.Components.Index).Assembly, typeof(BrushtailTech.Crafts.Web.Components.Index).Assembly }">
    <Found Context="routeData">
        <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
            <NotAuthorized>
                <RedirectToLogin />
            </NotAuthorized>
        </AuthorizeRouteView>
    </Found>
    <NotFound>
        <LayoutView Layout="@typeof(MainLayout)">
            <NotFound />
        </LayoutView>
    </NotFound>
</Router>